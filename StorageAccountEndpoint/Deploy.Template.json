{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VNetName": {
            "Type": "string",
            "defaultValue": "myVirtualNetwork",
            "metadata": {
                "description": "Name of the virtual network"
            }
        },
        "NSGName": {
            "Type": "string",
            "defaultValue": "MyNsgPrivate",
            "metadata": {
                "description": "Name of the Network Security Group"
            }
        },
        "StorageAccountName": {
            "type": "string",
            "defaultValue": "storageaccount90209i93i",
            "metadata": {
                "description": "Name of the Storage Account"
            }
        },
        "VM01Name": {
            "type": "string",
            "defaultValue": "Server01",
            "metadata": {
                "description": "Name for the first VM"
            }
        },
        "VM02Name": {
            "type": "string",
            "defaultValue": "Server02",
            "metadata": {
                "description": "Name for the first VM"
            }
        },
        "VMSize": {
            "type": "string",
            "defaultValue": "Standard_A2",
            "allowedValues": [
                "Standard_A2",
                "Standard_B1s",
                "Standard_B1ms",
                "Standard_B2s",
                "Standard_B2ms"
            ],
            "metadata": {
                "description": "Size of the VM"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "Boss",
            "metadata": {
                "description": "Username for the server's administrator"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Password!101",
            "metadata": {
                "description": "Username for the server's administrator"
            }
        },
        "windowsOSVersion": {
            "type": "string",
            "defaultValue": "2019-Datacenter",
            "allowedValues": [
                "2016-Datacenter",
                "2016-Datacenter-Server-Core",
                "2016-Datacenter-with-Containers",
                "2012-R2-Datacenter",
                "2008-R2-SP1",
                "2012-Datacenter",
                "2019-Datacenter",
                "2019-Datacenter-Core",
                "2019-Datacenter-Core-with-Containers"
            ],
            "metadata": {
                "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
            }
        }
    },
    "variables": {
        "VM01NicName": "[concat(parameters('VM01Name'), '-nic')]",
        "VM02NicName": "[concat(parameters('VM02Name'), '-nic')]",
        "Subnet01Name": "public",
        "Subnet02Name": "private"
    },
    "resources": [
        {
            "name": "[parameters('VNetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('Subnet01Name')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "[variables('Subnet02Name')]",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2016-03-30",
            "name": "[parameters('NSGName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('VM01Name')]",
            "apiVersion": "2019-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', variables('VM01NicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('VM01Name')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": false,
                        "enableAutomaticUpdates": false
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "[parameters('windowsOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[concat(parameters('VM01Name'), '-osdisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "diskSizeGB": 127
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VM01NicName') )]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "name": "[variables('VM01NicName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/', parameters('VNetName'))]"
            ],
            "properties": {
                "enableIPForwarding": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VNetName'), variables('Subnet01Name'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('VM02Name')]",
            "apiVersion": "2019-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', variables('VM02NicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('VM02Name')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": false,
                        "enableAutomaticUpdates": false
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "[parameters('windowsOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[concat(parameters('VM02Name'), '-osdisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "diskSizeGB": 127
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VM02NicName') )]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "name": "[variables('VM02NicName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/', parameters('VNetName'))]"
            ],
            "properties": {
                "enableIPForwarding": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VNetName'), variables('Subnet02Name'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "name": "[parameters('StorageAccountName')]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        }
    ],
    "outputs": {}
}